<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_margin="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="70dp">
        <ImageView
            android:padding="10dp"
            android:id="@+id/imgIcon"
            android:layout_width="70dp"
            android:layout_height="70dp" />
        <TextView
            android:layout_toStartOf="@+id/btnCancel"
            android:layout_marginTop="6dp"
            android:id="@+id/tvName"
            android:textSize="19sp"
            android:textStyle="bold"
            android:textColor="#3F51B5"
            android:text="Phone X Launcher"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/imgIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imgIcon"
            android:layout_marginLeft="5dp"
            android:layout_toLeftOf="@+id/btnCancel" />
        <TextView
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/tvDes"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_toRightOf="@+id/imgIcon"
            android:layout_toEndOf="@+id/imgIcon"
            android:text="Customize your phone with iPhone X style!"
            android:layout_below="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:tint="#595959"
            android:id="@+id/btnCancel"
            android:layout_margin="2dp"
            android:layout_alignParentEnd="true"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
    <FrameLayout
        android:clickable="true"
        android:id="@+id/viewBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true">
        <android.support.v7.widget.RecyclerView
            android:clickable="false"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:id="@+id/rcv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:id="@+id/imgBanner"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <RelativeLayout
        android:layout_marginBottom="8dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvRate"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:textColor="#454545"
                android:text="4.5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="18sp"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:textColor="#454545"
                android:text=" ★ "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvReview"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:textColor="#454545"
                android:text="• 5K Review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <Button
            android:layout_marginBottom="2dp"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="@drawable/bg_button_install"
            android:textColor="#f7f7f7"
            android:text="Install"
            android:id="@+id/btnInstall"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true" />
    </RelativeLayout>


</LinearLayout>