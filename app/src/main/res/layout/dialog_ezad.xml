<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <ImageView
            android:padding="10dp"
            android:id="@+id/imgIcon"
            android:src="@drawable/ic_name"
            android:layout_width="70dp"
            android:layout_height="70dp" />
        <TextView
            android:layout_marginTop="7dp"
            android:id="@+id/tvName"
            android:textSize="19sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:text="Phone X Launcher"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/imgIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imgIcon"
            android:layout_marginLeft="5dp" />
        <TextView
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/tvDes"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_toRightOf="@+id/imgIcon"
            android:layout_toEndOf="@+id/imgIcon"
            android:text="Customize your phone with iPhone X style!"
            android:layout_below="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.RecyclerView
            android:orientation="horizontal"
            android:id="@+id/rcv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:id="@+id/imgBanner"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <View
        android:background="#a8949494"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <Button
            android:textAllCaps="false"
            android:background="@drawable/bg_button_cancel"
            android:id="@+id/btnCancel"
            android:text="No, Exit"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:background="#a8949494"
            android:layout_width="0.5dp"
            android:layout_height="45dp"/>
        <Button
            android:background="@drawable/bg_button_install"
            android:textColor="@color/color_button_install"
            android:text="Install"
            android:id="@+id/btnInstall"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>